<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>taxi.controllers.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allCars</servlet-name>
        <servlet-class>taxi.controllers.CarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allCars</servlet-name>
        <url-pattern>/cars/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registrationCar</servlet-name>
        <servlet-class>taxi.controllers.RegistrationNewCar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrationCar</servlet-name>
        <url-pattern>/cars/registrationCar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allDrivers</servlet-name>
        <servlet-class>taxi.controllers.DriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allDrivers</servlet-name>
        <url-pattern>/drivers/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registrationDriver</servlet-name>
        <servlet-class>taxi.controllers.RegistrationDriver</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrationDriver</servlet-name>
        <url-pattern>/drivers/registrationDriver</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allManufacturers</servlet-name>
        <servlet-class>taxi.controllers.ManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allManufacturers</servlet-name>
        <url-pattern>/manufacturers/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registrationManufacturer</servlet-name>
        <servlet-class>taxi.controllers.RegistrationManufacturer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrationManufacturer</servlet-name>
        <url-pattern>/manufacturers/registrationManufacturer</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>driverToCar</servlet-name>
        <servlet-class>taxi.controllers.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>driverToCar</servlet-name>
        <url-pattern>/cars/driverToCar</url-pattern>
    </servlet-mapping>
</web-app>


