<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>taxi.controller.DisplayIndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allCars</servlet-name>
        <servlet-class>taxi.controller.GetAllCarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allCars</servlet-name>
        <url-pattern>/cars/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registrationCar</servlet-name>
        <servlet-class>taxi.controller.AddCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrationCar</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allDrivers</servlet-name>
        <servlet-class>taxi.controller.GetAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allDrivers</servlet-name>
        <url-pattern>/drivers/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registrationDriver</servlet-name>
        <servlet-class>taxi.controller.AddDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrationDriver</servlet-name>
        <url-pattern>/drivers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allManufacturers</servlet-name>
        <servlet-class>taxi.controller.GetAllManufacturersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allManufacturers</servlet-name>
        <url-pattern>/manufacturers/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registrationManufacturer</servlet-name>
        <servlet-class>taxi.controller.AddManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrationManufacturer</servlet-name>
        <url-pattern>/manufacturers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>driverToCar</servlet-name>
        <servlet-class>taxi.controller.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>driverToCar</servlet-name>
        <url-pattern>/cars/driver/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>taxi.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/drivers/login</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>taxi.web.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/index</url-pattern>
    </filter-mapping>
</web-app>


